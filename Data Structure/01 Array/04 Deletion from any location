// MCA DS-Array problem no 2 (Simple array deletion)
#include<stdio.h>

void display(int arr[], int n);
void deletion(int arr[], int *n);

int main() {
	int arr[20] = {4, 6, 12, 14, 20};
	int n = 5;
	
	display(arr, n);
	deletion(arr, &n);
	display(arr, n);
	return 0;
}

void display(int arr[], int n) {
	int i;
	printf("\nArray elements: ");
	for(i=0; i<n; i++) {
		printf("%d ",arr[i]);
	}
}

void deletion(int arr[], int *n) {
	int pos, i;
	printf("\nEnter the position of the element you want to delete: ");
	scanf("%d",&pos);
	
	if(pos >=0 && pos< *n) {
		for(i=pos; i< *n-1; i++) {
			arr[i] = arr[i+1];
		} (*n)--;
		printf("\nSuccessfully deleted");
	} else {
		printf("\nInvalid input");
	}
}
