// Array bubble sort program
// Taken the logic from geek for geeks
#include<stdio.h>
#include<stdbool.h>

void printArray(int arr[], int n);
void bubblesort(int arr[], int n);

int main() {
	int n;
	printf("Enter the size to create array: ");
	scanf("%d",&n);
	
	if(n <= 0) {
		printf("\n\nArray size should be larger than 0");	
		return -1;
	}	
	int arr[n];
	
	printf("\nEnter elements into an array\n");
	int i;
	for(i=0; i<n; i++) {
		printf("%d Index: ",i);
		scanf("%d", &arr[i]);
	}

	printf("\n\nPrinting array elements: ");
	printArray(arr, n);	
	// Call the bubblesort function
	bubblesort(arr, n);
	printf("\n\nPrinting array elements after bubblesort: ");
	printArray(arr, n);
	
	return 0;
}

void printArray(int arr[], int n) {
	int i;
	
	for(i=0; i<n; i++) {
		printf("%d ", arr[i]);
	}
}

void bubblesort(int arr[], int n) {
	int i, j, temp;
	bool swapped;
	
	for(i=0; i< n-1; i++) {
		swapped = false;
		
		for(j=0; j< n-i-1; j++) {
			if(arr[j] > arr[j+1]) {
				temp = arr[j];
				arr[j] = arr[j+1];
				arr[j+1] = temp;
				swapped = true;
			}
		}
		if(swapped = false) {
			break;
		}
	}
}
