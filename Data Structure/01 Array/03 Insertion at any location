// MCA DS-Array problem no 1 (Simple array insertion)
#include<stdio.h>

void display(int arr[], int n);
void insertion(int arr[], int *n);

int main() {
	int arr[20] = {14, 6, 38, 23};
	int n = 6;
	
	printf("\nArray elements: ");
	display(arr, n);
	insertion(arr, &n);
	printf("\nNew array elements: ");
	display(arr, n);
	
	return 0;
}

void display(int arr[], int n) {
	int i;
	for(i=0; i<n; i++) {
		printf("%d ",arr[i]);
	}
}

void insertion(int arr[], int *n) {
	int pos, elem, i;
	printf("\nEnter the postion (0-%d) to insert new element: ",*n);
	scanf("%d",&pos);
	
	printf("\nEnter the element: ");
	scanf("%d",&elem);
	
	for(i=*n; i>pos; i--) {
		arr[i+1] = arr[i];
	} arr[pos] = elem;
	(*n)++;
}
