#include <stdio.h>
#define MAX 10

int queue[MAX];
int front = -1, rear = -1;

// Enqueue function
void enqueue(int item) {
    if (rear == MAX - 1) {
        printf("\nOverflow: Queue is full!\n");
    } else {
        if (front == -1) {
            front = 0;  // Initialize front on first insertion
        }
        rear++;
        queue[rear] = item;
        printf("\nItem %d inserted\n", item);
    }
}

// Display function
void display() {
		int i = 0;
    if (front == -1 || front > rear) {
        printf("\nQueue is empty\n");
    } else {
        printf("\nQueue elements: ");
        for (i = front; i <= rear; i++) {
            printf("%d ", queue[i]);
        }
        printf("\n");
    }
}

int main() {
    int choice, item;
    printf("\n1. Enqueue\n 2. Display\n 3. Exit\n");

    while (1) {
        printf("\nEnter your choice: ");
        scanf("%d", &choice);  // Added '&' to scan choice correctly

        switch (choice) {
            case 1:
                printf("\nEnter the element: ");
                scanf("%d", &item);
                enqueue(item);  // Call enqueue function
                break;

            case 2:
                display();  // Call display function
                break;

            case 3:
                printf("\nExit\n");
                return 0;

            default:
                printf("\nWrong Input\n");
                break;
        }
    }
}
