// Check maximum value and minimum value of an array.
// Find max
#include<stdio.h>
  int main() {
    int arr[] = {2, 6, 11, 45, 23};
    int len = sizeof(arr) / sizeof(arr[0]);
    int i, max = arr[0]; 
    for(i=1; i<len; i++) {
      if(arr[i] > max) {
       max = arr[i];
    }
   } 
printf("\nMax value: %d", max);
return 0;
}

// Find min
#include<stdio.h>
  int main() {
     int arr[] = {2, 6, 11, 45, 23};
     int len = sizeof(arr) / sizeof(arr[0]);
     int i, min = arr[0];
     for(i=1; i<len; i++) {
        if(arr[i] < min) {
         min = arr[i];
    }
   } 
printf("\nMin value: %d", min);
return 0;
}
