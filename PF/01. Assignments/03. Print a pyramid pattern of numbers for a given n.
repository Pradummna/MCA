//3. Write a program to print a pyramid pattern of numbers for a given n.
#include<stdio.h>

int main() {
    int n;
    printf("Enter the terms to print no. of pyramids: ");
    scanf("%d",&n);

    for(int row = 1; row <= n; row++) {
        for (int spc = 0; spc < n - row; spc++) {
            printf(" ");
        }
        
        for(int col = 1; col <= row; col++) {
            printf("%d ",col);
        } 
        printf("\n");
    }
    return 0;
}
